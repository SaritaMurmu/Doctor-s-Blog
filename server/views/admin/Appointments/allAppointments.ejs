<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
            <%-include("../common/sidebar.ejs")%>

            <div class="content-wrapper">
                <div class="content-header">
                    <div class="container-fluid">

                        <div class="row mb-2 mt-5">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">
                                    <%=dashboardtitle%>
                                </h1>
                            </div>

                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/admin"> Home </a></li>
                                    <li class="breadcrumb-item active"> Dashboard </li>
                                    <li class="breadcrumb-item active"> Appointment </li>
                                </ol>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row mb-2 m-auto">
                    <div class="container-fluid mt-5">
                        <a href="/admin/addAppointment"> <button type="button" class="btn btn-success mb-3"> Add New Appointment </button> </a>
                        <table class="table table-dark table-striped text-center mb-5">
                            <thead>
                                <tr>
                                    <th scope="col"> # </th>
                                    <th scope="col"> Department </th>
                                    <th scope="col"> Doctor's Name </th>
                                    <th scope="col"> Date </th>
                                    <th scope="col"> Time </th>
                                    <th scope="col"> Patient's Name </th>
                                    <th scope="col"> Patient's Phone Number </th>
                                    <th scope="col"> Patient's Message </th>
                                    <th scope="col"> Delete </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let c = 0 %>
                                <% if(displaydata.length > 0) {%>
                                    <% for(let appointment of displaydata){ %>
                                        <% const p = appointment.id %>
                                        <tr>
                                            <!-- <td scope="row"> <%=p.substring(20, 24)%> </td> -->
                                            <td scope="row"> <%= ++c %> </td>
                                            <td style="color: yellow;"> <b> <%= appointment.department.deptName %> </b> </td>
                                            <td> <b style="color: yellow;"> <%= appointment.doctor.docName %> </b> </td>
                                            <td> <%= appointment.date %> </td>
                                            <td> <%= appointment.time %> </td>
                                            <td> <b class="text-primary"> <%= appointment.patientName %> </b> </td>
                                            <td> <%= appointment.phone %> </td>
                                            <td> <%= appointment.message %> </td>
                                            <td> <a href="/admin/deleteAppointment/<%=appointment._id%>"> <button class="btn btn-outline-danger"> Delete </button> </a> </td>
                                        </tr>
                                <%}}else{%>
                                <h1> No data found </h1>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

                    <%-include("../common/footer.ejs")%>
        </div>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>