<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
            <%-include("../common/sidebar.ejs")%>

            <div class="content-wrapper">
                <div class="content-header">
                    <div class="container-fluid">

                        <div class="row mb-2 mt-5">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">
                                    <%=dashboardtitle%>
                                </h1>
                            </div>

                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/admin"> Home </a></li>
                                    <li class="breadcrumb-item active"> Dashboard </li>
                                    <li class="breadcrumb-item active"> Doctor </li>
                                </ol>
                            </div>
                        </div>
                    
                    </div>
                </div>

                <div class="row mb-2 m-auto">
                    <div class="container mt-5">

                        
                        <a href="/admin/addDoctor"> <button type="button" class="btn btn-success mb-3"> Add Doctor </button> </a>
                        <table class="table table-dark table-striped text-center mb-5">
                            <thead>
                                <tr>
                                    <th scope="col"> # </th>
                                    <th scope="col"> Image </th>
                                    <th scope="col"> Department</th>
                                    <th scope="col"> Doctor's Name </th>
                                    <th scope="col"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let c = 0 %>
                                <% if(displaydata.length > 0) {%>
                                    <% for(let data of displaydata){ %>
                                        <% const p = data.id %>
                                        <tr>
                                            <!-- <td scope="row"> <%=p.substring(20, 24)%> </td> -->
                                            <td scope="row"> <%= ++c %> </td>
                                            <td> <img src="/doctorUploads/<%=data.docImage %>" style="border-radius: 50%;" alt="" height="50" width="50"> </td>
                                            <td> <%= data.department.deptName %> </td>
                                            <td> <%= data.docName %> </td>
                                            <td> <a href="/admin/deleteDoctor/<%=data._id%>"> <button class="btn btn-outline-danger"> Delete </button> </a> </td>
                                        </tr>
                                <%}}else{%>
                                <h1> No data found </h1>
                                <% } %>
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
            <%-include("../common/footer.ejs")%>
        </div>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>

